@charset "UTF-8";
/* 颜色变量 */
/**
 * 自定义颜色
 */
.contain {
  height: 100%;
  width: 100vw;
}
.contain .top {
  padding: 80rpx 0 20rpx 0rpx;
  font-size: 52rpx;
  font-weight: 900;
  justify-content: center;
  flex-direction: column;
  display: flex;
  align-items: center;
}
.contain .top .auto {
  color: black;
}
.contain .mid {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 36rpx;
}
.contain .mid .tips:first-child {
  font-size: 42rpx;
}
.contain .bottom {
  display: flex;
  flex-direction: column;
}
.contain .bottom .pic {
  width: 750rpx;
  height: 600rpx;
}
.contain .bottom .pic image {
  width: 100%;
  height: 100%;
  background-size: cover;
}
.contain .bottom .edit {
  z-index: 1;
  background-image: url("../../static/img/Rectangle 32.5addf12e.svg");
  background-size: cover;
  margin: -20rpx 0;
}
.contain .bottom .edit .btn1 {
  width: 70%;
  z-index: -1;
  margin: 200rpx 0;
  top: 40%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  background-color: #8DBABE;
}
.contain .bottom .edit .login {
  color: #8DBABE;
  font-size: 48rpx;
  position: relative;
  top: -200rpx;
  left: 45%;
}
.contain .bottom .edit .login:hover {
  width: 70%;
  z-index: -1;
  margin: 200rpx 0;
  top: 40%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  background-color: #8DBABE;
}
.contain .bottom .edit image {
  width: 100%;
  position: relative;
  top: -19rpx;
}

